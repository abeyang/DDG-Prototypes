<!-- $title: Cheatsheet -->

<!-- $dir: ../../ -->
<!-- @include ../../includes/head-nojs -->
<!-- @include ../../includes/searchtab -->

<!-- Load all other resources here: -->
<link rel="stylesheet" href="<!-- $title -->.css" charset="utf-8">

<!-- First 3 files are required for angular-masonry, unfortunately:
https://github.com/passy/angular-masonry/issues/100#issuecomment-78165023 -->
<script src="<!-- $dir -->assets/js/jquery-1.11.2.min.js"></script>
<script src="<!-- $dir -->assets/js/masonry.pkgd.min.js"></script>
<script src="<!-- $dir -->assets/js/imagesloaded.pkgd.js"></script>
<!-- Javascript -->
<script src="<!-- $dir -->assets/js/angular.js"></script>
<script src="<!-- $dir -->assets/js/angular-sanitize.js"></script>
<script src="<!-- $dir -->assets/js/angular-masonry.js"></script>
<script src="<!-- $dir -->assets/js/app.js"></script>

<script type="text/javascript">
	// http://stackoverflow.com/questions/18875714/angular-js-re-open-and-add-dependencies-to-an-already-bootstrapped-application
	app.requires.push('wu.masonry');
</script>

<script src="<!-- $title -->.js"></script>

<!-- UI Panel: for prototyping purposes -->
<div class="ui-panel bottom">
	<h6>Layout</h6>
	<span><input type="checkbox" ng-model="ui.inlineblock" ng-true-value="'inlineblock'" ng-false-value="''"> Inline-block</span>
	<span><input type="checkbox" ng-model="ui.tile" ng-true-value="'tile'" ng-false-value="''"> Tiles</span>
	<span><input type="checkbox" ng-model="ui.equalsizecols"> Equal-sized Columns</span>

	<br /><h6>Colors</h6>
	<span><input type="radio" ng-model="ui.color" value="whitegray"> White / Gray</span>
	<span><input type="radio" ng-model="ui.color" value=""> Gray / no border</span>
	<span><input type="radio" ng-model="ui.color" value="blue"> Blue / Light Blue</span>
</div> <!-- /.ui-panel -->

<!-- Main -->
<div class="ia_wrapper <!-- $title --> clearfix">
	<div class="ia pad-15">
		<h4>Emacs Cheatsheet</h4>

		<!-- Non Table-view -->
		<div masonry column-width="320" ng-show="ui.equalsizecols">
			<div class="masonry-brick no-table" ng-class="[ui.color, ui.inlineblock, ui.tile]" ng-repeat="cheat in cheats">
				<h6>{{ cheat.name }}</h6>
				<div ng-repeat="cmd in cheat.commands">
					<div class="pairing clearfix">
						<div class="key" ng-bind-html="cmd.key"></div>
						<div class="desc">{{ cmd.desc }}</div>
					</div>
				</div>
			</div> <!-- /.masonry-brick -->
		</div>

		<!-- Table-view -->
		<div masonry column-width="320" ng-show="!ui.equalsizecols">
			<table class="masonry-brick" ng-class="[ui.color, ui.inlineblock, ui.tile]" ng-repeat="cheat in cheats">
				<tr>
					<td colspan="2">
						<h6>{{ cheat.name }}</h6>		
					</td>
				</tr>
				<tr ng-repeat="cmd in cheat.commands">
					<td class="key" ng-bind-html="cmd.key"></td>
					<td class="desc">{{ cmd.desc }}</td>
				</tr>
			</table> <!-- /.masonry-brick -->
		</div>
		
	</div> <!-- /.ia -->
</div> <!-- /.ia_wrapper -->




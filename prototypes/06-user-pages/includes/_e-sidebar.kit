<strong ng-click="setFilterTopic('')">Topics</strong>
<div class="topic typeC" ng-repeat="t in topics | orderBy:'-amount'" ng-click="setFilterTopic(t.topic)">
	<span class="amt">{{t.amount}}</span>
	<span> {{t.topic}}</span>
	<div class="bar" style="width: {{t.amount/count.max_topics*100}}%"></div>
</div>